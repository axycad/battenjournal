# Database (Neon, Supabase, or other PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/batten_journal?sslmode=require"

# Auth.js - generate with: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here"
AUTH_URL="http://localhost:5000"

# Email (SMTP)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"
SMTP_FROM="Batten Journal <no-reply@battenjournal.com>"

# File uploads (local development)
UPLOAD_DIR="./uploads"

# Email digest cron authentication (optional)
CRON_SECRET="your-cron-secret-here"

